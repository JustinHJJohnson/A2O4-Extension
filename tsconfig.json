{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "downlevelIteration": true
  },
  "include": [
    "src"  
  ],
  "exclude": [
    "node_modules/*"
  ]
}